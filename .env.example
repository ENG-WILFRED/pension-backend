# Pension Backend - Docker Environment Variables Template

# Node Environment
NODE_ENV=production
PORT=5000

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=pension_db
DATABASE_URL=postgresql://postgres:postgres@db:5432/pension_db

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Payment Gateway
NEXT_PUBLIC_PAYMENT_GATEWAY_URL=http://localhost:3001
BACKEND_URL=http://localhost:5000

# Email Configuration (Gmail SMTP)
EMAIL_FROM=noreply@pension.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# SMS Configuration
SMS_API_URL=https://api.sms-provider.com
SMS_API_KEY=your-sms-api-key

# Optional: Logging
LOG_LEVEL=info

